@model IEnumerable<EnterpriseWebApp.Models.Model.Identity>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<div class="table-responsive">
    <table class="table align-items-center table-flush">
        <thead class="thead-light">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.LogoURL)
                    |
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Keywords)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Unvan)
                </th>
                <th>
                    Transactions
                </th>
            </tr>

        </thead>
        <tbody class="list">

            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">
                        <div class="media align-items-center">
                            <a href="#" class="avatar rounded-circle mr-3">
                                <img class="img-responsive" src="@item.LogoURL" />
                            </a>
                            <div class="media-body">
                                <span class="name mb-0 text-sm">@Html.DisplayFor(modelItem => item.Title)</span>
                            </div>
                        </div>
                    </th>

                    <td>
                        @Html.DisplayFor(modelItem => item.Keywords)
                    </td>
                    <td>
                        @Html.Raw(item.Description)
                    </td>
                    <!--<td>-->
                    @*<div class="avatar-group">
                            <a href="#" class="avatar avatar-sm rounded-circle" data-toggle="tooltip" data-original-title="@item.Title">
                                <img src="@item.LogoURL" />
                            </a>
                        </div>*@
                    <!--<a href="#" class="avatar rounded-circle mr-3" data-toggle="tooltip" data-original-title="@item.Title">
                            <img src="@item.LogoURL" />
                        </a>
                    </td>-->
                    <td>
                        @Html.DisplayFor(modelItem => item.Unvan)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.IdentityId })
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>
<div class="card-footer py-4">
    <nav aria-label="...">
        <ul class="pagination justify-content-end mb-0">
            <li class="page-item disabled">
                <a class="page-link" href="#" tabindex="-1">
                    <i class="fas fa-angle-left"></i>
                    <span class="sr-only">Previous</span>
                </a>
            </li>
            <li class="page-item active">
                <a class="page-link" href="#">1</a>
            </li>
            <li class="page-item">
                <a class="page-link" href="#">2 <span class="sr-only">(current)</span></a>
            </li>
            <li class="page-item"><a class="page-link" href="#">3</a></li>
            <li class="page-item">
                <a class="page-link" href="#">
                    <i class="fas fa-angle-right"></i>
                    <span class="sr-only">Next</span>
                </a>
            </li>
        </ul>
    </nav>
</div>


