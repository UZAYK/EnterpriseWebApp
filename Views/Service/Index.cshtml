@model IEnumerable<EnterpriseWebApp.Models.Model.Service>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<a class="btn btn-outline-primary mx-1 my-2 float-right" href="/Service/Create/">Create</a>
<div class="table-responsive">
    <table class="table align-items-center table-flush">
        <thead class="thead-light">
            <tr>

                <th>
                    @Html.DisplayNameFor(model => model.ServiceId)
                    |
                    @Html.DisplayNameFor(model => model.Title)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.PictureURL)
                </th>

                <th>
                    Transactions
                </th>

            </tr>

        </thead>
        <tbody class="list">

            @foreach (var item in Model)
            {
                <tr>

                    <td>
                        @Html.DisplayFor(modelItem => item.ServiceId)
                        |
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>

                    <td>
                        @Html.Raw(item.Description)
                    </td>

                    <th scope="row">
                        <div class="media align-items-center">
                            <a href="#" class="avatar rounded-circle mr-3">
                                <img class="img-responsive" src="@item.PictureURL" />
                            </a>
                            <div class="media-body">
                                <span class="name mb-0 text-sm">@Html.DisplayFor(modelItem => item.Title)</span>
                            </div>
                        </div>
                    </th>

                    <td>
                        @Html.ActionLink("Edit", "Services", new { id = item.ServiceId }) |
                        @Html.ActionLink("Delete", "Services", new { id = item.ServiceId }) 
                    </td>

                </tr>
            }

        </tbody>
    </table>
</div>
<div class="card-footer py-4">
    <nav aria-label="...">
        <ul class="pagination justify-content-end mb-0">
            <li class="page-item disabled">
                <a class="page-link" href="#" tabindex="-1">
                    <i class="fas fa-angle-left"></i>
                    <span class="sr-only">Previous</span>
                </a>
            </li>
            <li class="page-item active">
                <a class="page-link" href="#">1</a>
            </li>
            <li class="page-item">
                <a class="page-link" href="#">2 <span class="sr-only">(current)</span></a>
            </li>
            <li class="page-item"><a class="page-link" href="#">3</a></li>
            <li class="page-item">
                <a class="page-link" href="#">
                    <i class="fas fa-angle-right"></i>
                    <span class="sr-only">Next</span>
                </a>
            </li>
        </ul>
    </nav>
</div>

